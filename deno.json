{
  "tasks": {
    "compile-win": "deno compile -A --target x86_64-pc-windows-msvc --v8-flags=--max-old-space-size=8000 --output repro-win.exe main.ts",
    "compile-mac": "deno compile -A --target x86_64-apple-darwin --v8-flags=--max-old-space-size=8000 --output no-issue-mac main.ts",
    "compile-linux": "deno compile -A --target x86_64-unknown-linux-gnu --v8-flags=--max-old-space-size=8000 --output no-issue-linux main.ts"
  },
  "imports": {
    "@std/async": "jsr:@std/async@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.9",
    "@std/path": "jsr:@std/path@^1.0.8",
    "src/": "./src/"
  }
}
